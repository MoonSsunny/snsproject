<!-- 피드클릭시 상세피드페이지 -->
<!DOCTYPE html>
<html lang="ko">
<% include ./head.ejs %>

<body>

    <!-- 피드쓰기 -->

    <div class="feedmodal">
        <button type="button" id="close_btn" onclick="goBack()"></button>

        <div class="feed">
            <div class="feed_Content">
                <div class="feedBox" >
                    <img id="feedphoto" onerror="this.onerror=null; this.src='/img/feedup.png';" src="/img/feedup.png">
                </div>
                <div class="feedBox">
                    <div class="feedloginimg">
                        <a href=""><img id="loginImg" onerror="this.onerror=null; this.src='/img/not.png';"
                                src="#"></a>

                    </div>
                    <h5 style="font-size: 1.5rem; color: rgba(22, 21, 22, 0.541)"></h5>
                </div>

                <div class="feedBox" id="content" style="overflow: auto; height: 100%;"> </div>
                <div class="feedBox" id="feed_like" style="display: inline-block;">

                    <a href="#" id="feed_edit"><span id="feededitbtn" ><i class="fas fa-user-edit" ></i></span></a>

                    <div class="feedlike">
                        <div class="dislike">
                            <i class="far fa-heart" id="dislike"></i>
                        </div>
                        <div class="like">
                            <i class="fas fa-heart" id="like" style="display:none;"></i>
                        </div>
                    </div>

                    <div class="feedLikeCount"></div>
                    <p style="display: none;"><%= idx %></p>

                </div>

                <div class="feedBox" style="overflow: auto; max-height: 250px;">
                    <hr style="background:rgba(128, 128, 128, 0.089); width:100% ;margin-top:10px; border:0; height: 1px;  ">
                    댓글자리</div>
                <div class="feedBox">
                    <div class="feedloginimg" style="width: 45px; height: 45px;" >
                        <img id="loginImg" onerror="this.onerror=null; this.src='/img/not.png';" src="<%= path %>">

                    </div>
                    <div class="comment">
                        <textarea></textarea>
                        <button type="submit">게시</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="wrapper">

        <% include ./header.ejs %>

        <div class="container"></div>

    </div>
</body>

<script src="/js/feed.js" type="text/javascript"></script>

</html>