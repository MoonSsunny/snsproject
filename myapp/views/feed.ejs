<!-- 피드클릭시 상세피드페이지 -->
<!DOCTYPE html>
<html lang="ko">
    <% include ./head.ejs %>

        <body>

            <!-- 피드쓰기 -->

            <div class="feedmodal">
                <button type="button" id="close_btn" onclick="goBack()"></button>

                <div class="feed">
                    <div class="feed_Content">
                        <div class="feedBox" style="border: 1px solid rgba(128, 128, 128, 0.171);">
                            <img id="feedphoto" onerror="this.onerror=null; this.src='/img/feedup.png';"src="/img/feedup.png">
                        </div>
                        <div class="feedBox">
                            <div class="feedloginimg">
                                <a href="#"><img id="loginImg" onerror="this.onerror=null; this.src='/img/not.png';"src="#"></a>

                            </div>
                            <h5 style="font-size: 20px; color: rgb(22, 21, 22)"></h5>
                        </div>
                        
                        <div class="feedBox" id="content" style="overflow: auto;"> </div>
                        <div class="feedBox" id="feed_like" style="display: inline-block;">
 

                            <div class="feedlike">
                                <div class="dislike">
                                    <i class="far fa-thumbs-up" id="dislike"></i>
                                </div>
                                <div class="like">
                                    <i class="fas fa-thumbs-up" id="like" style="display:none;"></i>
                                </div>
                            </div>
                            <div class="feedLikeCount" ></div>
                            <p style="display: none;"><%= idx %></p>

                        </div>

                        <div class="feedBox" style="overflow: auto;"><hr style="width:100% ;margin-top:10px; border-bottom:0px;border-right:0px;border-left:0px ">댓글들어올자리</div>
                        <div class="feedBox">
                            <div class="feedloginimg">
                                <img id="loginImg" onerror="this.onerror=null; this.src='/img/not.png';"src="<%= path %>">

                            </div>
                            <div class="comment">
                                <textarea></textarea>
                                <button type="submit">게시</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="wrapper">

                <% include ./header.ejs %>

                    <div class="container"></div>

                </div>
            </body>

            <script src="/js/feed.js" type="text/javascript"></script>
        </html>