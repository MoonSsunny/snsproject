<!-- 피드클릭시 상세피드페이지 -->
<!DOCTYPE html>
<html lang="ko">
<% include ./head.ejs %>

<body>

    <!-- 피드쓰기 -->

    <div class="feedmodal">
        <button type="button" id="close_btn" onclick="goBack()"></button>

        <div class="feed">
            <div class="feed_Content editfeed">
                <div class="feedBox first" >
                    <img id="feedphoto" onerror="this.onerror=null; this.src='/img/feedup.png';" src="/img/feedup.png">
                </div>
                <div class="feedBox">
                    <div class="feedloginimg">
                        <a href="#"><img id="loginImg" onerror="this.onerror=null; this.src='/img/not.png';"
                                src="<%= path %>"></a>

                    </div>
                    <h5 style="font-size: 1.5rem; color: rgb(22, 21, 22)"><%= userName %></h5>
                </div>

                <div class="feedBox" id="content" style="overflow: auto; "> 
                    <textarea name="feededit" id="edittext"></textarea> 
                </div>
                <p style="display: none;"><%= idx %></p>
                <div class="feedBox">
                    <div class="editbtn">
                        <button type="button" id="feedEdit">EDIT</button>
                        <button type="button" id="feedDelete">DELETE</button>
                    </div>
                </div>

            </div>




        </div>
     </div>
</div>

    <div class="wrapper">

        <% include ./header.ejs %>

        <div class="container"></div>

    </div>
</body>

<script src="/js/feededit.js" type="text/javascript"></script>

</html>